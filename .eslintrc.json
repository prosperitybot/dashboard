{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "import/extensions": ["error", { "vue": "always" }]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./src"],
                    ["~", "./src/js"]
                ],
                "extensions": [".js", ".vue"]
            }
        }
    }
}
